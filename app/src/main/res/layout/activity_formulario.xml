<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back_button"
                android:padding="4dp" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formulário"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Spinners -->
        <Spinner
            android:id="@+id/visitStatusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/maintenanceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/larvaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/sampleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/propertyTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:minHeight="48dp"
            android:padding="8dp" />

        <!-- EditTexts -->
        <EditText
            android:id="@+id/blockEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o bloco"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/cepEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o CEP"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/streetEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o logradouro (nome da rua)"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/houseNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o número do imóvel"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/establishmentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o estabelecimento"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/complementEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o complemento"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/sequentialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o número sequencial"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <!-- Buttons -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Avançar"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>